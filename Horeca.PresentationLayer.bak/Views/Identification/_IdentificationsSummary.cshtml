@model Horeca.BusinessLayer.Models.IdentificationModel


<div class="panel panel-default">

    <div class="panel-heading">

        <h3 class="panel-title">@Model.Name</h3>

    </div>

    <div class="panel-body">
        @Html.DisplayNameFor(model => model.Id)
        @Html.DisplayFor(modelItem => modelItem.Id)

        @Html.DisplayNameFor(model => model.Type)
        @Html.DisplayFor(modelItem => modelItem.Type)

        @Html.DisplayNameFor(model => model.Name)
        @Html.DisplayFor(modelItem => modelItem.Name)

        @Html.DisplayFor(modelItem => modelItem.VatNumber)
        @Html.DisplayNameFor(model => model.VatNumber)


        @Html.DisplayNameFor(model => model.EmailAddress)
        @Html.DisplayFor(modelItem => modelItem.EmailAddress)
        
        @Html.DisplayNameFor(model => model.Description)
        @Html.DisplayFor(modelItem => modelItem.Description)
        
        @Html.DisplayNameFor(model => model.IsValidated)
        @Html.DisplayFor(modelItem => modelItem.IsValidated)
        
        @Html.DisplayNameFor(model => model.Logo)
        @Html.DisplayFor(modelItem => modelItem.Logo)

    </div>

    <div class="panel-footer">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |

        @Html.ActionLink("Details", "Details", new { id = Model.Id }) |

        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
    </div>
</div>
