@model Horeca.BusinessLayer.Models.IdentificationModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card border-dark mb-3">

    <div class="card-header bg-primary">
        <h5 class="card-title text-white">@Model.Name</h5>
        <h6 class="card-subtitle text-black-50">@Model.Type</h6>
    </div>

    @*<img class="card-img-top" alt="Logo"/>*@

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id, new { @readonly = "readonly" })
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VatNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VatNumber, new { @readonly = "readonly" })
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailAddress, new { @readonly = "readonly" })
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description, new { @readonly = "readonly" })
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsValidated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsValidated, new { @readonly = "readonly" })
            </dd>
        </dl>
    </div>

    <div class="card-footer">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class ="btn btn-primary btn-sm" })
    </div>

    @foreach (var item in Model.Informations)

    {
        @await Html.PartialAsync("~/Views/Information/_InformationsSummary", item)
    }
    
    <a asp-action="Index">Back to List</a>
